<% if @article.errors.any? %>
<h2>The following errors prevented the article from being saved</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
<% end %>
<% end %>
</ul>
<%= form_with(model: @article, local: true )  do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>
<p role="button">
    <%= f.submit %> 
  </p>
<% end %>